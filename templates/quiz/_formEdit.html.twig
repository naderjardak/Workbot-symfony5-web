{% extends 'utilisateur/Dashbord/base.html.twig' %}
{% block pagetitle %}
    <div class="pagetitle">
        <h1>Quiz</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a>Accueil</a></li>
                <li class="breadcrumb-item active">Quiz</li>
                <li class="breadcrumb-item active">Modifier</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
{% endblock%}
{% block body %}

    <section class="section">
        <div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 40px;">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title" style="display: flex;align-items: center;justify-content: center;font-size: 30px">Question Reponse</h6>


                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        <label for="inputText" class="col-sm-4 col-form-label">Titre</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.titre,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.titre) }}
                        </div>


                        <label for="inputText" class="col-sm-4 col-form-label">Description </label>
                        <div class="col-sm-10">
                            {{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.description) }}

                        </div>

                        </br>
                        <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">
                        <table>
                            <tr>
                                <td>
                        <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">
                            {{ form_widget(form.Valider,{'attr':{'class':'btn btn-primary'}}) }}
                        </div>
                                </td>

                                <td>
                        {{ form_end(form) }}<!-- End General Form Elements -->
                                </td>
                                <td>
                        <form method="post" action="{{ path('app_quiz_delete', {'id': quiz.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.id) }}">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                                </td>
                            </tr>
                        </table>
                        </div>
                        <br>
                        <div class="col-sm-10" style="display: flex;align-items: center;justify-content: left">
                            <button onClick="window.history.back();" class="btn btn-outline-dark">Go back</button>
                        </div>

                    </div>
                </div>

            </div>


        </div>
        </div>
    </section>
{% endblock %}



