    <section class="find-job job-list section">
        <div class="container">
            <div class="single-head">
                <div class="row">
                    <div class="col-lg-6 col-12">
                        {% set i= spons|length/2 %}
                        {% set k=0 %}

                        {% for s in spons %}

                        {% if k>=i and k< spons|length %}
                        {% set k= spons|length %}
                    </div>
                    <div class="col-lg-6 col-12">
                        {% endif %}


                        <div class="single-job">

                            <div class="job-content">

                                    <h4><a style="font-size: 30px"><b>Your Sponsor</b></a></h4>

                                <table>
                                    <tr>
                                        <td><p> <img src ="{{ asset('upload/logo/' ~ s.logo) }}"
