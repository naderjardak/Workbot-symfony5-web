                                        <td><div class="vl"></div></td>
                                        <td><b><p style="font-size: 20px">{{ s.nom }}</p></b>
                                    </tr>
                                </table>
                                <ul>
                                    <li><i class="bx lni-website"></i><a>Job.TN.com</a></li>
                                    <li><i class="bx bx-yen"></i> Free </li>
                                    <li><i class="lni lni-map-marker"></i>Developper par le team WorkBot</li>
                                </ul>
                            </div>
                            <div class="job-button">
                                <object type="application/html" width="100%" height="100%" style="margin-top: 100px">
                                    <a  href="{{ path('app_evennement_index') }}"><input type="submit" value="Back" class="btn btn-outline-success"></a>
                                    <form method="post" action="{{ path('app_sponsor_delete', {'id': s.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ s.id) }}">
                                        <button class="btn btn-outline-success">Delete</button>
                                    </form>

                                    <a href="{{ path('app_sponsor_edit', {'id': s.id}) }}"><input type="submit" value="edit" class="btn btn-outline-success"></a>

                                </object>


                            </div>
                        </div>
                        {% set k=k+1 %}
                        {% endfor %}


                        {% if spons|length==0 %}
                            <h2>Vous n'avez pas des sponsors dans cette évènement</h2>
                        {% endif %}




                    </div>
                    <a  href="{{ path('app_sponsor_new',{'id':id}) }}"><input type="submit" value="Ajouter sponsor" class="btn btn-outline-success"></a>

                </div>
