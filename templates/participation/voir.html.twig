    <section class="find-job job-list section">
        <div class="container">
            <div class="single-head">
                <div class="row">
                    <div class="col-lg-6 col-12">
                        {% set i= par|length/2 %}
                        {% set k=0 %}

                        {% for p in par %}

                        {% if k>=i and k< par|length %}
                        {% set k= par|length %}
                    </div>
                    <div class="col-lg-6 col-12">
                        {% endif %}


                        <div class="single-job">

                            <div class="job-content">

                                <h4><a style="font-size: 30px"><b>Your participate</b></a></h4>

                                <table style="border: #0d462c;border-width: 6px">
