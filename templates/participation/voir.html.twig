                                        <td><b>Nom<b><br><p > {{ p.nom }}</td>. </p></td></td>
                                        <br><hr>
                                        <td><b>Prenom<b><br><p style="margin-left: 30px"> {{ p.prenom }}</td></p></td>
                                        <br>
                                        <td><b>Adresse Mail<b><br><p  style="margin-left: 30px"> {{ p.email }}</td></p></td>

                                    </tr>
                                </table>
                                <ul>
                                    <li><i class="bx lni-website"></i><a>Job.TN.com</a></li>
                                    <li><i class="bx bx-yen"></i> Free </li>
                                    <li><i class="lni lni-map-marker"></i>Developper par le team WorkBot</li>
                                </ul>
                            </div>
                            <div class="job-button">
                                <object type="application/html" width="100%" height="100%" style="margin-top: 100px">

                                    <a href="{{ path('app_evennement_index') }}"><input type="submit" value="Back" class="btn btn-outline-success"></a>


                                </object>


                            </div>
                        </div>
                        {% set k=k+1 %}
                        {% endfor %}


                        {% if par|length==0 %}
                            <h2>Vous n'avez pas des participants dans cette évènements</h2>
                        {% endif %}




                    </div>

                </div>
            </div>

        </div>
        </div>
        </div>
        </div>
    </section>

