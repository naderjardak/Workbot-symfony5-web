{% extends 'utilisateur/Dashbord/base.html.twig' %}

{% block body %}


    <section class="section">

        <div class="row">
            <div style="display: flex;align-items: center;justify-content: end;margin-top: 100px">

                <div class="col-lg-6">
                    <div class="col-6">
                <div class="card">
                    <div class="card-body">

                        <h5 class="card-title">Ajouter Ads</h5>

                        <!-- General Form Elements -->
                        {% for danger  in app.flashes('danger') %}
                            <div class="alert alert-danger">
                                {{ danger }}
                            </div>
                        {% endfor %}
                        {{ form_start(form) }}

                        <label for="inputText" class="col-sm-4 col-form-label">Name</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.nom,{'attr':{'class':'form-control'}}) }}
                        </div>

                        <label for="inputText" class="col-sm-4 col-form-label">type</label>
                        <div class="col-sm-10">
                            <div class="form-select">
                                {{ form_widget(form.type,{'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>

                        <label for="inputText" class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.mail,{'attr':{'class':'form-control'}}) }}
                        </div>
                        <label for="inputText" class="col-sm-4 col-form-label">Telephone</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.phonenumber,{'attr':{'class':'form-control'}}) }}
                        </div>
                        <label for="inputText" class="col-sm-4 col-form-label">photo</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.photo,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.photo,{'attr':{'class':'form-control'}}) }}
                        </div>
                        <label for="inputText" class="col-sm-4 col-form-label">Date d'expiration</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.dateFin,{'attr':{'class':'form-control'}}) }}
                        </div>

                        </br>
                        <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">
                            {{ form_widget(form.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                        </div>


                        {{ form_end(form) }}<!-- End General Form Elements -->
                    </div>
                    </div>
                </div>
                </div>
            </div>


        </div>
        </div>
    </section>
{% endblock %}
