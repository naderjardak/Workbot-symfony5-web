{% extends 'base.html.twig' %}

{% block title %}Test index{% endblock %}

{% block body %}
    <h1>Test index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Domaine</th>
                <th>Description</th>
                <th>Lien</th>
                <th>Categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for test in tests %}
            <tr>
                <td>{{ test.id }}</td>
                <td>{{ test.titre }}</td>
                <td>{{ test.domaine }}</td>
                <td>{{ test.description }}</td>
                <td>{{ test.lien }}</td>
                <td>{{ test.categorie }}</td>
                <td>
                    <a href="{{ path('app_test_show', {'id': test.id}) }}">show</a>
                    <a href="{{ path('app_test_edit', {'id': test.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_test_new') }}">Create new</a>
{% endblock %}
