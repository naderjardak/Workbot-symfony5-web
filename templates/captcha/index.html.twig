{% extends 'base.html.twig' %}

{% block title %}Captcha index{% endblock %}

{% block body %}
    <h1>Captcha index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for captcha in captchas %}
            <tr>
                <td>{{ captcha.id }}</td>
                <td>{{ captcha.status }}</td>
                <td>
                    <a href="{{ path('app_captcha_show', {'id': captcha.id}) }}">show</a>
                    <a href="{{ path('app_captcha_edit', {'id': captcha.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_captcha_new') }}">Create new</a>
{% endblock %}
