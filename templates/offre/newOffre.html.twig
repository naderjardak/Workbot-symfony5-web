                success: function (retour) {
                    if (retour) {
                        $('div#list1').empty();
                        $.each(JSON.parse(retour), function (i, obj) {
                            $('div#calendar').hide();
                            $('div#list1').show();
                            $('div#list1').append(' '
                            )
                        });
                    }
                    if (!retour) {
                        $('div#list1').empty();
                        $('div#calendar').hide();
                        $('div#list1').show();
                        $('div#list1').append('<p>hellooooooooooooooo</p>')

                    }
                },
            });
            return false;
        });
